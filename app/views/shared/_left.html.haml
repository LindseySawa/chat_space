.left
  .left__top
    %ul.left__content
      %li
        = current_user.name
      %li.list
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'left__btn--1'
      %li.list
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'left__btn--1'

  .left__bottom
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .left__bottom__groupname
          = group.name
        .left__bottom__msg
          = group.show_last_message