%html{lang: "ja"}
  %head
    %meta{charset: "utf-8"}
  %body
    %header

    .contents
      =render partial:"shared/left"
    



      .right
        .right__top
          %ul
            %li
              %h3.right__top__gname チャットネイム
            %li.right__top__edit
              =link_to "Edit", '/', :class => "right__top__btn1"
            %li
              %p.right__top__member Member:

        .right__middle
          = render partial: 'message', collection: @messages
          
        .right__bottom
          .right__form
            %form.right__msg
              .right__text
                %input.right__text__input{placeholder: 'type a message'}
                  %label.right__text__msg
                    = fa_icon 'camera-retro', class: 'imageicon'
                    %input.hidden{type: 'file'}
              %input.right__btn2{type: 'submit', value: 'SEND'}

        


    
